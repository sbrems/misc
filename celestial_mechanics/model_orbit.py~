import numpy as np
import matplotlib.pyplot as plt
import math

def make_orbit(m1,m2,a,e,P,t,t_0=0,prec=1e-9):
    '''Gives the position of the bodies m1 and m2 at time t (in units of P).
    t_0 is the time of periastron passage.
    a is semimajor axis, e eccentricity. For projection use the
    flip_orbit routine. Notation is taken from Seagers Exoplanets.'''
    G = 6.67408 Ã— 10-11 #m3 kg-1 s-2
    
    #tt = t - t0
    #n = 2*math.pi*tt
    M =  = n* (t - t0)
    #solving Keplers equation
    E = 0
    E_old = E
    while abs(E-E_old/E)> prec:
        E_old = E
        E = E- (E-e*math.sin(E*2*math.pi)-M) / (1-e*math.cos(E*2*math.pi))
    
    r = a*(1-e * math.cos(E*2*math.pi))
    f = math.acos( (a*(1-e**2)-r) / (e*r) )
    x = r*math.cos(f)
    y = r*math.sin(f)
    
    return r,f,x,y


